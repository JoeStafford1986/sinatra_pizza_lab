<h3>Current Pizza Orders: <%= @orders.count  %></h3>
<hr/>
<% for order in @orders %>
  <p>Name: <%= order.pretty_name() %></p>
  <p>Order: <%= order.quantity %> X <%= order.topping  %></p>
  <form method="get" action="/pizza_orders/<%= order.id  %>">
    <input type="submit" value="Show Order">
  </form>
  <form method="get" action="/pizza_orders/<%= order.id  %>/update">
    <input type="submit" value="Update Order">
  </form>
  <form method="post" action="/pizza_orders/<%= order.id  %>/delete">
    <input type="submit" value="Delete Order">
  </form>
  <hr/>
<% end %>
